<p id="notice"><%= notice %></p>

<h1>Patients</h1>

<table class="pure-table pure-table-bordered">
  <thead>
    <tr class="<%= cycle('pure-table-odd', '') %>">
      <th>First name</th>
      <th>Last name</th>
      <th>City</th>
      <th>Username</th>
      <th>Password</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr class="<%= cycle('pure-table-odd', '') -%>">
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.city %></td>
        <td><%= patient.username %></td>
        <td><%= patient.password %></td>
        <td><%= patient.address %></td>
        <td><%= link_to 'Show', patient, class: 'pure-button  pure-button-primary'  %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient), class: 'pure-button  button-secondary'  %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' }, class: 'pure-button  button-warning'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient', new_patient_path, class: 'pure-button  button-secondary'  %>
